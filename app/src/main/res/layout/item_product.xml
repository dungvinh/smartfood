<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_product"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi xao"
                android:textColor="#FF5832"
                android:textSize="20sp" />
            <androidx.appcompat.widget.AppCompatRatingBar
                android:id="@+id/rb_product_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/ratingstarcolor"
                android:isIndicator="true"
                android:numStars="5" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_preparation_time"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#6A90B5"
                        android:layout_height="wrap_content"
                        android:text="20" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#DF6A90B5"
                        android:layout_height="wrap_content"
                        android:text="PhÃºt" />
                </LinearLayout>

                <ImageView
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:src="@drawable/split"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_product_price"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="20sp"
                        android:textColor="#6A90B5"
                        android:layout_height="wrap_content"
                        android:text="15000" />

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#EE6A90B5"
                        android:layout_height="wrap_content"
                        android:text="VND" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_product_image"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="-8dp"
                android:layout_height="110dp"
                android:src="@drawable/momo_pay"
                android:padding="4dp"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorAccent"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>