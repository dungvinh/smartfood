<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.shop.ProductDetailFragment"
    android:id="@+id/product_details"
    android:orientation="vertical">
    <Toolbar
        android:id="@+id/ad_toolbar_product_details"
        android:layout_width="match_parent"
        android:background="#827171"
        android:titleTextColor="#000000"
        android:title="Chi tiết sản phẩm"
        android:layout_height="?attr/actionBarSize">
    </Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/iv_ad_product_details"
            android:layout_width="150dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="20">

            <EditText
                android:id="@+id/et_ad_name_product_details"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_margin="10dp"
                android:text="Tên sản phẩm"
                android:textColor="#050505"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_ad_price_product_details"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:layout_margin="10dp"
                android:text="Giá sản phẩm"
                android:textColor="#f20"
                android:textSize="25sp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#00FF55"
            android:layout_marginTop="15dp"
            android:textSize="30sp"
            android:text="Mô tả chi tiết sản phẩm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                android:paddingBottom="10dp"
                android:id="@+id/et_ad_description_product_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </ScrollView>
    </LinearLayout>





</LinearLayout>