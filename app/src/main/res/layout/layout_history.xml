<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/fragment_info">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Thông tin lịch sử"
            android:textSize="20dp"
            android:textColor="#000"
            android:textStyle="italic"
            android:layout_gravity="start" />
        <View style="@style/proifleDetailsView" />
       <RelativeLayout
           android:id="@+id/rl_order_history"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="15dp">
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginStart="25dp"
               android:layout_marginVertical="10dp"
               android:layout_marginEnd="10dp"
               app:cardCornerRadius="16dp"
               app:cardElevation="2dp">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginStart="40dp"
                   android:paddingVertical="10dp"
                   android:paddingStart="10dp"
                   android:paddingEnd="10dp">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text = "Lịch sử đặt hàng"
                       android:textColor="@color/primaryTextColor"
                       android:textSize="20dp"
                       android:textStyle="bold"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="7dp"
                       android:text = "Xem lại các đơn hàng đã đặt"
                       android:textStyle="italic"/>
               </LinearLayout>
           </androidx.cardview.widget.CardView>
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="55dp"
               android:layout_height="55dp"
               android:src="@drawable/icon_order_history"
               android:elevation="15dp"
               android:layout_centerVertical="true"
               app:civ_border_width="1dp"
               app:civ_border_color="@color/profilePrimaryDark"/>
       </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_transaction_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="40dp"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Lịch sử giao dịch"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text = "Xem lại giao dịch đã thực hiện"
                        android:textStyle="italic"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_transaction_history"
                android:elevation="15dp"
                android:layout_centerVertical="true"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/profilePrimaryDark"/>
        </RelativeLayout>
        <View style="@style/proifleDetailsView"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>